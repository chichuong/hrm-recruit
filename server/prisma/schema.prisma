generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  HR
  INTERVIEWER
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
  role      Role     @default(HR)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Job {
  id          Int       @id @default(autoincrement())
  title       String
  description String
  level       String?   // Junior/Mid/Senior
  type        String?   // Full-time/Part-time/Intern
  salaryFrom  Int?
  salaryTo    Int?
  status      String    @default("draft") // draft|published|closed
  publishedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}
